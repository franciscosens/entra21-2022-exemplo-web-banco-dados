@model ResponsavelEditarViewModel

<h5 class="h5 text-center text-primary">Contatos</h5>

<div class="row">
    <div class="col-12">
        <button class="btn btn-primary mb-2 float-end"
                id="responsavel-cadastro"
                data-target="#cadastroResponsavelContatoModal"
                data-url="@Url.Action("CadastrarModal", "ResponsavelContato", new { responsavelId = Model.Id })">
             <i class="fa-solid fa-floppy-disk"></i> Cadastrar
        </button>
    </div>
</div>

@if (!Model.Contatos.Any())
{
    <div class="row">
        <div class="text-center pt-5">
            <h6 class="h6">Nenhum registro cadastrado</h6>
            <img src="~/images/no-records.png" alt="Caixa vazia"/>
        </div>
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Tipo</th>
            <th>Valor</th>
            <th>Ação</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var contato in Model.Contatos)
        {
            <tr>
                <td>@contato.Tipo.GetDisplayAttribute()</td>
                <td>@contato.Valor</td>
                <td>
                    <button class="btn btn-primary responsavel-contato-editar" data-id="@contato.Id">
                        <i class="fa-solid fa-pencil"></i> Editar
                    </button>
                    <button class="btn btn-outline-danger contato-button-apagar" data-id="@contato.Id">
                        <i class="fa-solid fa-trash"></i> Apagar
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<div id="modal-contato"></div>
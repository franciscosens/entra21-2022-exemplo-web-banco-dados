@model List<Raca>

<h2>Lista de Raças</h2>

<div class="row mb-3">
    <div class="text-end">
        <a asp-action="cadastrar"
           class="btn btn-primary">Cadastrar</a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <!-- Cabeçalho da tabela-->
        <tr>
            <!-- Linha da tabela-->
            <th>Nome</th> <!-- Coluna específica do cabeçalho-->
            <th>Espécie</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        <!-- Lugar dos registros da tabela-->
        @foreach (var raca in Model)
        {
            <tr>
                <!-- Linha-->
                <td>@raca.Nome</td> <!-- Coluna específica para body-->
                <td>@raca.Especie</td>
                <td>
                    <a asp-action="editar" asp-route-id="@raca.Id">Editar</a>
                    <a asp-action="apagar" asp-route-id="@raca.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
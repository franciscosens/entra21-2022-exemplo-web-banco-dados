<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Entra21.CSharp.ClinicaVeterinaria.Aplicacao</title>
    <partial name="~/Views/_ViewImportsCss.cshtml" />
    
</head>
<body>
    @{
        var controller = Context.GetRouteData().Values["controller"]?.ToString();
    }

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" aria-current="page" href="/">
                                <i class="fa-solid fa-house"></i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Pet" ? "active" : "text-white")" asp-controller="Pet" asp-action="Index">
                                <i class="fa-solid fa-paw"></i>
                                Pets
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Raca" ? "active" : "text-white")" asp-controller="Raca" asp-action="Index">
                                <span data-feather="file"></span>
                                Raças
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Responsavel" ? "active" : "text-white")" asp-controller="Responsavel" asp-action="Index">
                                <i class="fa-solid fa-user"></i>
                                Responsáveis
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(controller == "Veterinario" ? "active" : "text-white")" asp-controller="Veterinario" asp-action="Index">
                                <i class="fa-solid fa-user-doctor"></i>
                                Veterinarios
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pt-2">
                @RenderBody()
            </main>
        </div>
    </div>

    <partial name="~/Views/_ViewImportsJavascripts.cshtml" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>